{% extends 'base.html.twig' %}

{% block title %}Mes Tricks{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-2">
{#            {{ dump() }}#}
            {% for trick in tricks %}

                <div class="col-md-2">
                    <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                        <div class="card-body d-flex flex-column align-items-start">
                            <img class="card-img-right flex-auto d-none d-lg-block"
                                 src="{{ trick.images[0].filename }}" alt="Card image cap">
                            <strong class="d-inline-block mb-2 text-primary">World</strong>
                            <h5 class="mb-0">
                                <a class="text-dark" href="#">{{ trick.author.firstName }}</a>
                            </h5>
                            <div class="mb-1 text-muted">{{ trick.createdAt | date("d/m/Y") }}</div>
                            <p class="card-text mb-auto">{{ trick.title }}</p>

                            <a href="#">Continue reading</a>
                        </div>

                    </div>
                </div>


            {% endfor %}
        </div>
    </div>

{% endblock %}
