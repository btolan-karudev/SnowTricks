        <h1>Créer un nouveau trick</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class':'form-control', 'placeholder':'Titre du trick'}}) }}
